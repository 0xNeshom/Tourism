{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/data/TourSlider.js",
    "src/utilities/ReactQuery.ts",
    "src/app/api/tours/[id]/route.js",
    "src/app/layout.jsx",
    "src/app/(auth)/login-register/page.jsx",
    "src/utilities/persianNumber/persian.ts",
    "src/components/tourList/TourCard.jsx"
, "src/redux/reducer.js", "src/redux/store.js", "src/redux/actionTypes.js", "src/components/navbar/Navbar.jsx"  ],
  "exclude": ["node_modules"]
}
